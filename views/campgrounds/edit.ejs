<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">キャンプ場を編集</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate
                class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">キャンプ場名</label>
                    <input class="form-control" type="text" id="name" name="campground[name]"
                        value="<%= campground.name %>" required>
                    <div class="valid-feedback">
                        OK!
                    </div>
                    <div class="invalid-feedback">
                        キャンプ場名を入力してください。
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">場所</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%= campground.location %>" required>
                    <div class="valid-feedback">
                        OK!
                    </div>
                    <div class="invalid-feedback">
                        場所を入力してください。
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">画像の追加</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">価格</label>
                    <div class="input-group">
                        <span class="input-group-text">¥</span>
                        <input type="number" id="price" class="form-control" placeholder="0" name="campground[price]"
                            aria-label="価格" value="<%= campground.price %>" required min="0">
                        <span class="input-group-text">/泊</span>
                    </div>
                    <div class="valid-feedback">
                        OK!
                    </div>
                    <div class="invalid-feedback">
                        価格を0以上の半角数字で入力してください。
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">説明</label>
                    <textarea class="form-control" id="description" name="campground[description]" rows="3"
                        required><%= campground.description %></textarea>
                    <div class="valid-feedback">
                        OK!
                    </div>
                    <div class="invalid-feedback">
                        説明を入力してください。
                    </div>
                </div>
                <div class="mb-3">
                    <h6>画像の削除</h6>
                    <div class="row row-cols-1 row-cols-md-4 g-4">
                        <% campground.images.forEach((img, i)=> { %>
                            <div class="col">
                                <div class="card">
                                    <img class="card-img" src="<%= img.url%>" alt="">
                                    <div class="card-img-overlay text-end pt-1 pe-2">
                                        <div class="form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="image-<%=i%>"
                                                name="deleteImages[]" value="<%=img.filename%>">
                                            <label class="form-check-label" for="image-<%=i%>">削除</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">更新する</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">キャンセル</a>
        </div>
    </div>