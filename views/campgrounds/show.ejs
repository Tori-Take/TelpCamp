<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= campground.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.name %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">登録者: <%= campground.author.username %>
                    </li>
                    <li class="list-group-item">
                        <%= campground.price.toLocaleString() %>円/泊
                    </li>
                </ul>
                <div class="card-body">
                    <% if(currentUser && campground.author.equals(currentUser._id)) { %>
                        <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info">編集</a>
                        <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">削除</button>
                        </form>
                        <% } %>
                </div>
                <div class="card-footer text-muted">
                    <a href="/campgrounds">キャンプ場一覧へ戻る</a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>レビュー</h2>
            <% if(currentUser) { %>
                <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-3 validated-form"
                    novalidate>
                    <div class="mb-3">
                        <fieldset class="starability-basic">
                            <input type="radio" id="rate5" name="review[rating]" value="5" />
                            <label for="rate5" title="最高">5 stars</label>
                            <input type="radio" id="rate4" name="review[rating]" value="4" />
                            <label for="rate4" title="良い">4 stars</label>
                            <input type="radio" id="rate3" name="review[rating]" value="3" />
                            <label for="rate3" title="普通">3 stars</label>
                            <input type="radio" id="rate2" name="review[rating]" value="2" />
                            <label for="rate2" title="良くない">2 stars</label>
                            <input type="radio" id="rate1" name="review[rating]" value="1" />
                            <label for="rate1" title="ひどい">1 star</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="review-body" class="form-label">コメント</label>
                        <textarea name="review[body]" id="review-body" cols="30" rows="3" class="form-control"
                            required></textarea>
                    </div>
                    <button class="btn btn-success">投稿する</button>
                </form>
                <% } %>
                    <% for(let review of campground.reviews) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <% if (review.author) { %>
                                    <h5 class="card-title">
                                        <%= review.author.username %>
                                    </h5>
                                    <% } %>
                                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                        <p class="card-text">
                                            <%= review.body %>
                                        </p>
                                        <% if(currentUser && review.author.equals(currentUser._id)) { %>
                                            <form
                                                action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                method="POST">
                                                <button class="btn btn-sm btn-danger">削除</button>
                                            </form>
                                            <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>