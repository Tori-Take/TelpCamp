<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>の画像">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.name %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">
                        ¥<%= campground.price.toLocaleString() %>/泊
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info">編集</a>
                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST"
                        onsubmit="return confirm('本当にこのキャンプ場を削除しますか？');">
                        <button class="btn btn-danger">削除</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <a href="/campgrounds">キャンプ場一覧へ戻る</a>
                </div>
            </div>
        </div>
    </div>