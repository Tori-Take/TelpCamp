<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6">
            <div id="campgroundCarousel" class="carousel slide">
                <% if (campground.images.length) { %>
                    <div class="carousel-inner">
                        <% campground.images.forEach((img, i)=> { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                <img src="<%= img.url %>" class="d-block w-100" alt="">
                            </div>
                            <% }) %>
                    </div>
                    <% if (campground.images.length> 1) { %>
                        <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCarousel"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#campgroundCarousel"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                            <% } else { %>
                                <img src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png"
                                    class="d-block w-100" alt="Default Image">
                                <% } %>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.name %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">投稿者: <%= campground.author.username %>
                    </li>
                    <li class="list-group-item">¥<%= campground.price.toLocaleString() %>/泊</li>
                </ul>
                <% if( currentUser && campground.author.equals(currentUser._id)) { %>
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">編集</a>
                        <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">削除</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>
        <div class="col-md-6">
            <div id='map' style="height: 300px;" class="mb-3" data-campground='<%- JSON.stringify(campground) %>'
                data-token='<%- mapboxToken %>'></div>
            <% if(currentUser) { %>
                <h2>レビューを投稿</h2>
                <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3 validated-form"
                    novalidate>
                    <fieldset class="starability-basic">
                        <legend>評価:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" checked />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="mb-3">
                        <label class="form-label" for="body">コメント</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <div class="valid-feedback">
                            OK!
                        </div>
                    </div>
                    <button class="btn btn-success">投稿</button>
                </form>
                <% } %>
                    <h2>レビュー</h2>
                    <% for(let review of campground.reviews) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= review.author.username %>
                                </h5>
                                <p class="starability-result" data-rating="<%= review.rating %>">
                                    Rated <%= review.rating %> out of 5 stars
                                </p>
                                <p class="card-text">
                                    <%= review.body %>
                                </p>
                                <% if( currentUser && review.author.equals(currentUser._id)) { %>
                                    <form
                                        action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-sm btn-danger">削除</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>

    <script src="/javascripts/showPageMap.js"></script>